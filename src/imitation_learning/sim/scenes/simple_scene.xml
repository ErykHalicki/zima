<mujoco model="robot scene">
  <compiler angle="radian"/>
  <option timestep="0.0005"/>

  <include file="robots/zima.xml"/>
  <include file="room.xml"/>

  <statistic center="0 0 0.1" extent="0.8"/>


  <asset>
    <texture type="skybox" file="textures/sky.png"/>

    <texture type="2d" name="wheel_texture" builtin="checker" mark="edge" rgb1="0.0 0.0 0.0" rgb2="0.2 0.2 0.2" width="300" height="300"/>
    <material name="wheel_material" texture="wheel_texture" texuniform="true" texrepeat="5 5"/>

    <texture type="cube" name="rubiks_texture1" file="textures/rubiks.png" gridsize = "3 4" gridlayout = "..U.RFLB..D." />
    <texture type="cube" name="rubiks_texture2" file="textures/rubiks.png" gridsize = "3 4" gridlayout = ".U..LDBF.R.." />
