    <material name="rubiks_material1" texture="rubiks_texture1"/>
    <material name="rubiks_material2" texture="rubiks_texture2"/>
    <material name="rubiks_material3" texture="rubiks_texture3"/>
    <material name="rubiks_material4" texture="rubiks_texture4"/>
    <material name="rubiks_material5" texture="rubiks_texture5"/>
  </asset>

  <worldbody>
    <body name="rubiks_cube1" pos="1.0 0.0 0.05">
      <freejoint/>
      <inertial pos="0 0 0" mass="0.1" diaginertia="0.00016667 0.00016667 0.00016667"/>
      <geom type="box" material="rubiks_material1" size="0.025 0.025 0.025" />
    </body>

    <body name="rubiks_cube2" pos="1.0 0.0 0.10">
