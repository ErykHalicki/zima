    <light name="light_28" pos="0.4 0.9 0.56" dir="-0.15 -0.25 -1" diffuse="0.4 0.3 0.95" specular="0.06 0.04 0.14" castshadow="true" active="true" cutoff="27" exponent="5"/>

    <!-- Corner lamp lights -->
    <light name="lamp_light_1" pos="1.2 1.2 0.4" dir="0 0 -1" diffuse="0.5 0.45 0.4" specular="0.2 0.2 0.15" castshadow="false" attenuation="0.5 0.5 0.5"/>
    <light name="lamp_light_2" pos="-1.2 1.2 0.4" dir="0 0 -1" diffuse="0.45 0.4 0.35" specular="0.15 0.15 0.1" castshadow="false" attenuation="0.5 0.5 0.5"/>

    <geom name="floor" size="0 0 0.05" pos="0 0 -0.1" type="plane" material="groundplane"/>

    <!-- Room walls - light gray -->
    <geom name="wall_north" type="box" size="1.5 0.05 0.5" pos="0 1.5 0.25" material="wall_material"/>
    <geom name="wall_south" type="box" size="1.5 0.05 0.5" pos="0 -1.5 0.25" material="wall_material"/>
    <geom name="wall_east" type="box" size="0.05 1.5 0.5" pos="1.5 0 0.25" material="wall_material"/>
    <geom name="wall_west" type="box" size="0.05 1.5 0.5" pos="-1.5 0 0.25" material="wall_material"/>

    <!-- Ceiling with popcorn texture -->
    <geom name="ceiling" type="plane" size="1.5 1.5 0.05" pos="0 0 0.7" zaxis="0 0 -1" material="ceiling_material"/>

    <!-- Simple geometric couch against south wall -->
    <body name="couch" pos="0 -1.2 0.0">
      <!-- Seat base -->
      <geom type="box" size="0.4 0.25 0.1" pos="0 0 0.0" material="couch_seat"/>
      <!-- Invisible slanted collision box on top -->
      <geom type="box" size="0.4 0.25 0.02" pos="0 0 0.12" rgba="0 0 0 0" euler="0.3 0.3 0"/>
      <!-- Back rest -->
      <geom type="box" size="0.4 0.05 0.15" pos="0 -0.2 0.15" material="couch_back"/>
      <!-- Invisible slanted collision box on backrest -->
      <geom type="box" size="0.4 0.05 0.02" pos="0 -0.2 0.32" rgba="0 0 0 0" euler="0.3 0 0"/>
      <!-- Left armrest -->
      <geom type="box" size="0.05 0.25 0.12" pos="-0.35 0 0.02" material="couch_arms"/>
      <!-- Invisible slanted collision box on left armrest -->
      <geom type="box" size="0.05 0.25 0.02" pos="-0.35 0 0.16" rgba="0 0 0 0" euler="0 0.3 0"/>
      <!-- Right armrest -->
      <geom type="box" size="0.05 0.25 0.12" pos="0.35 0 0.02" material="couch_arms"/>
      <!-- Invisible slanted collision box on right armrest -->
      <geom type="box" size="0.05 0.25 0.02" pos="0.35 0 0.16" rgba="0 0 0 0" euler="0 0.3 0"/>
    </body>

    <!-- Corner lamps -->
    <body name="lamp1" pos="1.2 1.2 0.0">
      <!-- Base (taller) -->
      <geom type="cylinder" size="0.03 0.25" pos="0 0 0.125" material="lamp_base"/>
      <!-- Shade -->
      <geom type="cylinder" size="0.08 0.08" pos="0 0 0.375" material="lamp_shade"/>
      <!-- Invisible slanted collision box on shade -->
      <geom type="box" size="0.08 0.08 0.02" pos="0 0 0.46" rgba="0 0 0 0" euler="0.3 0.3 0"/>
    </body>

    <body name="lamp2" pos="-1.2 1.2 0.0">
      <!-- Base -->
      <geom type="cylinder" size="0.03 0.15" pos="0 0 0.05" material="lamp_base"/>
      <!-- Shade -->
      <geom type="cylinder" size="0.08 0.08" pos="0 0 0.15" material="lamp_shade"/>
      <!-- Invisible slanted collision box on shade -->
      <geom type="box" size="0.08 0.08 0.02" pos="0 0 0.24" rgba="0 0 0 0" euler="0.3 0.3 0"/>
    </body>

    <!-- Simple bed against west wall -->
    <body name="bed" pos="-1.1 -0.5 0.0">
      <!-- Bed frame -->
      <geom type="box" size="0.52 0.32 0.03" pos="0 0 -0.07" rgba="0.3 0.25 0.2 1"/>
      <!-- Mattress -->
      <geom type="box" size="0.5 0.3 0.1" pos="0 0 0.0" rgba="0.9 0.9 0.95 1"/>
      <!-- Invisible slanted collision box on mattress -->
      <geom type="box" size="0.5 0.3 0.02" pos="0 0 0.12" rgba="0 0 0 0" euler="0.3 0.3 0"/>
      <!-- Headboard -->
      <geom type="box" size="0.05 0.32 0.2" pos="-0.47 0 0.1" rgba="0.3 0.25 0.2 1"/>
      <!-- Invisible slanted collision box on headboard -->
      <geom type="box" size="0.05 0.32 0.02" pos="-0.47 0 0.32" rgba="0 0 0 0" euler="0 0.3 0"/>
    </body>

    <!-- White bookshelf against north wall -->
    <body name="bookshelf" pos="0.5 1.3 0.0">
      <!-- Shelf frame - bottom -->
      <geom type="box" size="0.3 0.15 0.02" pos="0 0 0.0" material="bookshelf_material"/>
      <!-- Shelf frame - middle -->
      <geom type="box" size="0.3 0.15 0.02" pos="0 0 0.15" material="bookshelf_material"/>
      <!-- Shelf frame - top -->
      <geom type="box" size="0.3 0.15 0.02" pos="0 0 0.3" material="bookshelf_material"/>
      <!-- Left side -->
      <geom type="box" size="0.02 0.15 0.15" pos="-0.28 0 0.15" material="bookshelf_material"/>
      <!-- Right side -->
      <geom type="box" size="0.02 0.15 0.15" pos="0.28 0 0.15" material="bookshelf_material"/>
      <!-- Back panel -->
      <geom type="box" size="0.3 0.02 0.15" pos="0 -0.13 0.15" material="bookshelf_material"/>

      <!-- Books on bottom shelf -->
      <geom type="box" size="0.03 0.12 0.06" pos="-0.2 -0.02 0.07" material="book_red"/>
      <geom type="box" size="0.04 0.12 0.08" pos="-0.12 -0.02 0.09" material="book_blue"/>
      <geom type="box" size="0.025 0.12 0.07" pos="-0.06 -0.02 0.075" material="book_green"/>
      <geom type="box" size="0.035 0.12 0.06" pos="0.0 -0.02 0.07" material="book_yellow"/>
      <geom type="box" size="0.03 0.12 0.09" pos="0.05 -0.02 0.095" material="book_purple"/>
      <geom type="box" size="0.04 0.12 0.07" pos="0.1 -0.02 0.075" material="book_red"/>
      <geom type="box" size="0.03 0.12 0.08" pos="0.16 -0.02 0.09" material="book_green"/>

      <!-- Books on middle shelf -->
      <geom type="box" size="0.035 0.12 0.07" pos="-0.18 -0.02 0.22" material="book_blue"/>
      <geom type="box" size="0.03 0.12 0.06" pos="-0.13 -0.02 0.21" material="book_yellow"/>
      <geom type="box" size="0.04 0.12 0.08" pos="-0.07 -0.02 0.23" material="book_purple"/>
      <geom type="box" size="0.025 0.12 0.09" pos="-0.01 -0.02 0.235" material="book_red"/>
      <geom type="box" size="0.035 0.12 0.07" pos="0.04 -0.02 0.22" material="book_green"/>
      <geom type="box" size="0.03 0.12 0.08" pos="0.09 -0.02 0.23" material="book_blue"/>
      <geom type="box" size="0.04 0.12 0.06" pos="0.14 -0.02 0.21" material="book_yellow"/>

      <!-- Invisible slanted collision box on top -->
      <geom type="box" size="0.3 0.15 0.02" pos="0 0 0.34" rgba="0 0 0 0" euler="0.3 0.3 0"/>
    </body>

    <!-- Desk against west wall -->
    <body name="desk" pos="-1.15 0.5 0.0">
      <!-- Legs -->
      <geom type="cylinder" size="0.02 0.18" pos="-0.2 -0.35 0.0" material="desk_material"/>
      <geom type="cylinder" size="0.02 0.18" pos="0.2 -0.35 0.0" material="desk_material"/>
