    <light name="light_18" pos="0.5 -0.5 0.6" dir="-0.1 0.1 -1" diffuse="0.9 0.6 0.2" specular="0.12 0.08 0.03" castshadow="true" active="true" cutoff="42" exponent="5"/>
    <light name="light_19" pos="-0.5 0.5 0.6" dir="0.1 -0.1 -1" diffuse="0.3 0.9 0.8" specular="0.04 0.12 0.1" castshadow="true" active="true" cutoff="36" exponent="5"/>
    <light name="light_20" pos="0.5 0.5 0.6" dir="-0.1 -0.1 -1" diffuse="0.8 0.2 0.4" specular="0.1 0.03 0.06" castshadow="true" active="true" cutoff="44" exponent="5"/>
