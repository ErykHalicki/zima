    <light name="light_23" pos="0.6 -0.3 0.58" dir="-0.2 0.1 -1" diffuse="0.3 0.7 0.3" specular="0.04 0.1 0.04" castshadow="true" active="true" cutoff="40" exponent="5"/>
    <light name="light_24" pos="-0.3 0.6 0.52" dir="0.1 -0.2 -1" diffuse="0.7 0.8 0.4" specular="0.1 0.12 0.06" castshadow="true" active="true" cutoff="46" exponent="5"/>
