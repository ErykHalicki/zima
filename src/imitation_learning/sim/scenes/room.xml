      <geom type="cylinder" size="0.02 0.18" pos="0.2 0.35 0.0" material="desk_material"/>
      <!-- Desktop -->
      <geom type="box" size="0.25 0.4 0.02" pos="0 0 0.2" material="desk_material"/>
    </body>

    <!-- Monitors on desk -->
    <body name="monitor1" pos="-1.15 0.7 0.22">
      <!-- Stand -->
      <geom type="cylinder" size="0.04 0.06" pos="0 0 0.06" material="monitor_frame"/>
      <!-- Screen (rotated to face outward from wall) -->
      <geom type="box" size="0.01 0.15 0.1" pos="0.05 0 0.16" material="monitor_screen"/>
      <!-- Frame -->
      <geom type="box" size="0.015 0.16 0.11" pos="0.05 0 0.16" material="monitor_frame"/>
      <!-- Invisible slanted collision box on top -->
      <geom type="box" size="0.015 0.16 0.02" pos="0.05 0 0.28" rgba="0 0 0 0" euler="0.3 0 0"/>
    </body>

    <body name="monitor2" pos="-1.15 0.3 0.22">
      <!-- Stand -->
      <geom type="cylinder" size="0.04 0.06" pos="0 0 0.06" material="monitor_frame"/>
      <!-- Screen (rotated to face outward from wall) -->
      <geom type="box" size="0.01 0.15 0.1" pos="0.05 0 0.16" material="monitor_screen"/>
      <!-- Frame -->
      <geom type="box" size="0.015 0.16 0.11" pos="0.05 0 0.16" material="monitor_frame"/>
      <!-- Invisible slanted collision box on top -->
      <geom type="box" size="0.015 0.16 0.02" pos="0.05 0 0.28" rgba="0 0 0 0" euler="0.3 0 0"/>
    </body>

    <!-- Small black garbage can -->
    <body name="garbage_can" pos="-1.0 -1.2 0.0">
      <geom type="cylinder" size="0.08 0.15" pos="0 0 0.0" material="garbage_can"/>
      <!-- Invisible slanted collision box on top -->
      <geom type="box" size="0.08 0.08 0.02" pos="0 0 0.17" rgba="0 0 0 0" euler="0.3 0.3 0"/>
    </body>
